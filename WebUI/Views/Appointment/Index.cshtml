@model List<Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">📅 My Weekly Appointments</h2>

    <!-- Schedule Appointment Form -->
    <div class="card shadow-sm mt-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Schedule a New Appointment</h5>
        </div>
        <div class="card-body">
            <form asp-action="Schedule" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Date & Time</label>
                        <input type="datetime-local" class="form-control" name="Date" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" name="Description" placeholder="Enter details" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-success mt-3 w-100">📌 Schedule Appointment</button>
            </form>
        </div>
    </div>

    <!-- Appointment List -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Upcoming Appointments</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Date.ToString("yyyy-MM-dd")</td>
                                <td>@Model[i].Date.ToString("hh:mm tt")</td>
                                <td>@Model[i].Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center text-muted">No appointments scheduled yet.</p>
            }
        </div>
    </div>
</div>

<!-- Bootstrap 5 Required -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

